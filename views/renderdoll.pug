doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Dolls
    link(rel='stylesheet' href='/css/doll.css')

  body
    .container
         if dolls.length
         .row.row-cols-1.row-cols-md-3.g-4
            each doll in dolls
                .col 
                    .card.card-custom.mx-2.mb-3.img-fluid(style='width: 18rem;')
                        .item
                          img(src= "/"+doll.itemImage , alt='Item Image')
                          .card-body
                                  h2=doll.itemName
                                  p Price: #{doll.itemPrice}
                                  p Seller: #{doll.seller}
                                  p Description: #{doll.description}
