      option(value='') Select Sex
      option(value='male') Male
      option(value='female') Female
      option(value='other') Other
    input#parentLocation(type='text' name='parentLocation' placeholder='Location' name="parentLocation")
    input#parentNIN(type='text' name='parentNIN' placeholder='National Identification Number (NIN)' name="parentNIN")
    input#parentContact(type='tel' name='parentContact' placeholder='Contact Number' name="parentContact")
    input#emergencyContact(type='tel' name='emergencyContact' placeholder='Emergency Contact' name="emergencyContact")
