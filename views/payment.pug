doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Time and Payments Table
  style.
    body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    }
    .container {
    max-width: 800px;
    margin: 20px auto;
    background-color: #D90077;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    }
    h2 {
    margin-top: 0;
    }
    table {
    width: 100%;
    border-collapse: collapse;
    }
    th,
    td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    }
    th {
    background-color: #FBBEDE;
    }
    /* tr:nth-child(even) {
    background-color: #E090DF;
    } */
    .add-row-btn {
    background-color: #8800C7;
    color: #fff;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    border-radius: 3px;
    }
    .add-row-btn:hover {
    background-color: #E090DF;
    }
.container
  h2 Time and Payments
  table#timePaymentsTable
    thead
      tr
        th Date
        th Time Worked
        th Payment
        th Action
    tbody
      // Rows will be dynamically added here
  button.add-row-btn(onclick='addRow()') Add Row
script.
  function addRow() {
  const table = document
  .getElementById("timePaymentsTable")
  .getElementsByTagName("tbody")[0];
  const newRow = table.insertRow();
  const cells = Array.from({ length: 4 }, () => newRow.insertCell());
  cells[0].innerHTML = '<input type="date">';
  cells[1].innerHTML = '<input type="text">';
  cells[2].innerHTML = '<input type="number" step="0.01">';
  cells[3].innerHTML =
  '<button onclick="deleteRow(this)">Delete</button>';
  }
  function deleteRow(btn) {
  const row = btn.parentNode.parentNode;
  row.parentNode.removeChild(row);
  }
